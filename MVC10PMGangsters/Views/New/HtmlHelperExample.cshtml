@model MVC10PMGangsters.Models.EmployeeModel
@{
    ViewBag.Title = "HtmlHelperExample";
}

<h2>HtmlHelperExample</h2>

<style>
    .form-control {
    background-color:navajowhite;
    }
</style>

<script>
    function fun()
    {
        alert("Tollywood hero Suresh babu");
    }
</script>
<form>
    <input type="hidden" id="myuser" name="myuser" value="" />
<input type="text" name="EmpName" id="EmpName" value="Firasath" class="form-control" onclick="fun()" />
@Html.TextBox("Firstname","Tiger",new {@class="form-control",id="fstNme", onclick = "fun()" })@*///loosly type controls*@

@Html.TextBox("fileupload", null, new { type="file" })@*///loosly type controls*@
<br />
@Html.Password("Pwd","9876")
<br />
<span>Male</span>@Html.RadioButton("Gender","Male",true)
<span>FeMale</span>@Html.RadioButton("Gender", "FeMale")
