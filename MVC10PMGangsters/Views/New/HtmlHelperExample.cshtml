<span>PHP</span>@Html.CheckBox("PHP")
<br />
<br />

@Html.DropDownList("Country",new List<SelectListItem>() {

    new SelectListItem {Text="India",Value="1" },
    new SelectListItem {Text="Russia",Value="2" },
    new SelectListItem {Text="Ukraine",Value="3",Selected=true }

},"Select Country")


@Html.TextArea("address", "Telangana",10,14, new { })
@Html.DropDownList("Users");




</form>
<script src="~/scripts/jquery-1.10.2.js"></script>
<script>

    $('#Users').on("change", function () {

       alert($('#Users option:selected').text());
       $('#myuser').val($('#Users option:selected').text());
    })


</script>







































